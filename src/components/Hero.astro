---
import Countdown from "./Countdown.astro";
---

<section
  class="relative w-full h-screen overflow-hidden lex justify-center items-center"
  style="background-image: url('/images/hero.webp'); background-size: cover; background-position: center;"
>
  <div
    class="absolute inset-0 bg-[rgba(2,0,36,0.96)] flex flex-col items-center justify-center p-4"
  >
    <header class="mb-4">
      <img
        src="/images/logo.webp"
        alt="Logo de Stream Fighters 3"
        class="w-48 md:w-64"
      />
      <h1 class="sr-only">
        Stream Fighters 3 - El evento más esperado de combates en vivo
      </h1>
    </header>

    <!-- Introducción con bienvenida -->
    <main class="text-center">
      <!-- Temporizador de cuenta regresiva -->
      <div class="flex flex-col items-center">
        <Countdown />

        <!-- Botón de compra de boletos -->
        <footer class="mt-6 flex flex-col items-center">
          <a
            href="https://www.taquillalive.com/performance-details/?artist=westcol&event=TCL.EVN542.PRF1"
            target="_blank"
            rel="noopener noreferrer"
            class="font-bold py-4 px-6 bg-[#1375e1] shadow-lg uppercase text-white transition-transform transform hover:scale-105 hover:bg-[#0d59b5] focus:outline-none focus:ring-2 focus:ring-[#1375e1] focus:ring-opacity-50"
          >
            ¡Compra tu boleta ahora!
          </a>
        </footer>
      </div>
    </main>
  </div>
</section>
